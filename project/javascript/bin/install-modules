#!/bin/sh

cd /opt/codedeploy-agent/deployment-root/${DEPLOYMENT_GROUP_ID}/${DEPLOYMENT_ID}/deployment-archive

export last_successful_install_node_modules=$(cat /opt/codedeploy-agent/deployment-root/deployment-instructions/${DEPLOYMENT_GROUP_ID}_last_successful_install)/deployment-archive/node_modules
if [ "$DEPLOYMENT_GROUP_NAME" = "staging" ]; then
  export http_proxy="http://tproxy.104dc-staging.com:3128"
  export https_proxy="http://tproxy.104dc-staging.com:3128"
elif [ "$DEPLOYMENT_GROUP_NAME" = "develop" ]; then
  export http_proxy="http://tproxy.104dc-dev.com:3128"
  export https_proxy="http://tproxy.104dc-dev.com:3128"
elif [ "$DEPLOYMENT_GROUP_NAME" = "master" ]; then
  export http_proxy="http://tproxy.104dc.com:3128"
  export https_proxy="http://tproxy.104dc.com:3128"
fi
# 防呆
if [ ! -d $last_successful_install_node_modules ]; then
  mkdir -p $last_successful_install_node_modules
fi
cp -a $last_successful_install_node_modules .

mkdir -p logs
npm install
unset http_proxy
unset https_proxy